{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "incremental": true,
    "lib": [
      "esnext"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "newLine": "crlf",
    "noEmitHelpers": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveConstEnums": false,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "outDir": "./dist"
  },
  "include": [
    "./src/**/**/*.ts"
  ]
}