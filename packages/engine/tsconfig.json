{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "ES2021"
    ],
    "types": [
      "node"
    ],
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "noEmitHelpers": false,
    "noEmitOnError": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true
  },
  "include": [
    "./lib/**/**/*.ts"
  ]
}